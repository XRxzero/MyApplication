<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desk"

    android:id="@+id/role_selectview">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/backto"
        tools:layout_editor_absoluteX="630dp"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/role1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/amia" />

            <ImageView
                android:id="@+id/check1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/role11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/blue" />

            <ImageView
                android:id="@+id/check11"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/role12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ifrit" />

            <ImageView
                android:id="@+id/check12"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/check" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/role13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sliver" />

            <ImageView
                android:id="@+id/check13"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/check" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ok1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/yes_selector" />

    </LinearLayout>



</LinearLayout>