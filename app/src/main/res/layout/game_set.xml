<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:gravity="center">

        <TextView
            android:id="@+id/setText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="游戏设置"
            android:textColor="@color/yellow"
            android:textSize="48dp"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_x="70dp"
        android:layout_y="100dp">

        <TextView
            android:id="@+id/voice"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="音量大小"
            android:textColor="@color/peru"
            android:textSize="30dp"

            />

        <ImageView
            android:id="@+id/voiceBackground"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/setvoice" />

        <TextView
            android:id="@+id/voiceNum"
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/peru"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-420dp"
            android:layout_x="253dp"
            android:layout_y="120dp">

            <SeekBar
                android:id="@+id/voiceSet"
                android:layout_width="350dp"
                android:layout_height="28dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/voice_seekbarbackground"
                android:thumb="@drawable/voice_seekbar" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="220dp">

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_x="70dp"
            android:layout_y="220dp">

            <TextView
                android:id="@+id/background"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="背景设置"
                android:textColor="@color/peru"
                android:textSize="30dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="270dp"
            android:layout_y="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/s_bg1"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_x="300dp"
                android:layout_y="180dp"
                android:background="@drawable/desk" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_x="336dp"
                android:layout_y="270dp"
                app:srcCompat="@drawable/check" />
            >

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_x="450dp"
            android:layout_y="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/s_bg2"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_x="300dp"
                android:layout_y="180dp"
                android:background="@drawable/desk2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_x="336dp"
                android:layout_y="270dp"
                app:srcCompat="@drawable/check" />
            >

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="350dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ok"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/yes_selector" />

    </LinearLayout>

</LinearLayout>